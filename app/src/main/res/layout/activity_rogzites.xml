<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityRogzites"
    android:orientation="vertical">

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Vezetéknév"
      android:id="@+id/edit_vNev"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Keresztnév"
      android:id="@+id/edit_kNev"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Jegy"
      android:id="@+id/edit_jegy"
      android:inputType="number"
      android:maxLength="1"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Rögzítés"
      android:id="@+id/btn_rogzit"/>

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Vissza"
      android:id="@+id/btn_vissza"/>


  </LinearLayout>